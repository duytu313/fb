<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/facebook"
            android:contentDescription="Facebook Logo" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Tìm tài khoản của bạn"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nhập email hoặc số di động để tìm tài khoản của bạn."
            android:textAlignment="center"
            android:textColor="#555"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etEmailOrPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/edittext_bg"
            android:hint="Email hoặc số di động"
            android:padding="12dp"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/btnFindAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#1877F2"
            android:text="Tìm tài khoản"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:paddingVertical="12dp" />

        <Button
            android:id="@+id/btnBackToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#E4E6EB"
            android:text="Quay lại đăng nhập"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:paddingVertical="12dp" />

    </LinearLayout>
</ScrollView>
