<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#ffff">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông báo"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/imgOption1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="150dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/option"/>
        <ImageView
            android:id="@+id/imgSearch"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/search"/>
    </LinearLayout>

    <!-- Mới -->
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mới"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/layoutNotif1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/woman"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Nguyen thi thuy bình luận về bài viết của bạn"/>
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/option"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 giờ"
            android:textSize="16dp"/>
    </LinearLayout>

    <!-- Hôm nay -->
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hôm nay"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/layoutNotif2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/profile"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Nguyen van anh bình luận về bài viết của bạn"/>
            <ImageView
                android:id="@+id/imgOption2"
                android:layout_marginLeft="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/option"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNotif3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/man"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="giang a pao bình luận về bài viết của bạn"/>
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/option"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutToday3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/grandmother"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="giang a su bình luận về bài viết của bạn"/>
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/option"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trước đó"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/layoutNotif4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/boy"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="giang a su bình luận về bài viết của bạn"/>
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/option"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Xem thông báo trước đó"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/edittext_bg"
        android:textAlignment="center"/>
</LinearLayout>
