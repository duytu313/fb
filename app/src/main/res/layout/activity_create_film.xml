<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="12dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_exit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/exit"
            android:contentDescription="Thoát" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tạo thước phim"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgsetting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/settings"
            android:layout_marginEnd="8dp"
            android:contentDescription="Camera" />


    </LinearLayout>


    <HorizontalScrollView
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/cameraLayout"
                android:layout_marginStart="10dp"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:orientation="vertical"

                android:gravity="center">

                <ImageView

                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/camera"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera"
                    android:textSize="12sp"
                    android:textColor="#000" />
            </LinearLayout>




            <LinearLayout
                android:id="@+id/musicLayout"
                android:layout_marginStart="10dp"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/music"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Music"
                    android:textSize="12sp"
                    android:textColor="#000" />
            </LinearLayout>




            <LinearLayout
                android:id="@+id/sampleLayout"
                android:layout_marginStart="10dp"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/plus"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mẫu"
                    android:textSize="12sp"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/savedLayout"
                android:layout_marginStart="10dp"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/bookmark"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã lưu"
                    android:textSize="12sp"
                    android:textColor="#000" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/draftLayout"
                android:layout_marginStart="10dp"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/notes"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bản nháp"
                    android:textSize="12sp"
                    android:textColor="#000" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/effectLayout"
                android:layout_marginStart="10dp"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ai"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hiệu ứng"
                    android:textSize="12sp"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/greenScreenLayout"
                android:layout_marginStart="10dp"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/user"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phông xanh"
                    android:textSize="12sp"
                    android:textColor="#000" />
            </LinearLayout>



        </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thư viện ảnh"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15sp" />

        <ImageView
            android:layout_marginStart="6dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/down" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="horizontal"
            android:layout_gravity="end">

            <ImageView
                android:layout_marginStart="150dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/image" />

            <TextView
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn nhiều file"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
