<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".CreateNoteActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/exit"
            android:contentDescription="Quay lại" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ghi chú mới"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000" />

        <TextView
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chia sẻ"
            android:textColor="#1976D2"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp">


        <ImageView
            android:id="@+id/image_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user"
            android:layout_marginBottom="20dp"
            android:contentDescription="Ảnh người dùng" />


        <EditText
            android:id="@+id/textName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Chia sẻ suy nghĩ..."
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/edittext_bg" />


        <TextView
            android:id="@+id/textCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/60"
            android:textSize="16sp"
            android:textColor="#999999"
            android:layout_marginTop="12dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_music"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/music"
                android:contentDescription="Nhạc"
                android:layout_marginEnd="20dp" />

            <ImageView
                android:id="@+id/btn_smile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/smiling"
                android:contentDescription="Cảm xúc" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
