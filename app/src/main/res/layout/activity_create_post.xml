<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/exit"
            android:contentDescription="Thoát" />

        <TextView
            android:layout_marginStart="120dp"
            android:text="Tạo bài viết"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_post"
            android:text="Đăng"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:backgroundTint="#1877F2"
            android:layout_marginStart="50dp"/>
    </LinearLayout>

    <!-- Dòng người dùng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/user"
            android:background="@drawable/edittext_bg"
            android:padding="2dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:text="Nguyễn Văn A"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/privacy"
                android:text="Công khai 🌍"
                android:textSize="13sp"
                android:textColor="#555"/>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bạn đang nghĩ gì thế?"
        android:textSize="16sp"
        android:textColor="#000"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:minHeight="150dp"
        android:gravity="top"/>


    <ImageView
        android:id="@+id/selected_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:background="#EEE"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/btn_photo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/photo"
            android:contentDescription="Ảnh"/>

        <ImageView
            android:id="@+id/btn_tag"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/tag"
            android:contentDescription="Gắn thẻ"/>

        <ImageView
            android:id="@+id/btn_feeling"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/smiling"
            android:contentDescription="Cảm xúc"/>

        <ImageView
            android:id="@+id/btn_checkin"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/locations"
            android:contentDescription="Vị trí"/>

        <ImageView
            android:id="@+id/btn_more"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/option"
            android:contentDescription="Thêm"/>
    </LinearLayout>

</LinearLayout>
